<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="90dp">

    <TableLayout
        android:id="@+id/table_fixture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="2">

        <TableRow android:layout_width="match_parent">

            <TextView
                android:id="@+id/name_team1_fixture"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="@color/color_main"
                android:gravity="left"
                android:layout_column="0"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp">
            </TextView>

            <TextView
                android:id="@+id/time_fixture"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textColor="@color/color_main"
                android:gravity="center"
                android:textSize="10dp"
                android:text="00:00"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                android:layout_column="2"
                android:layout_gravity="center">
            </TextView>

            <TextView
                android:id="@+id/name_team2_fixture"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16dp"
                android:gravity="right"
                android:textColor="@color/color_main"
                android:layout_marginRight="8dp"
                android:layout_column="4"
                android:layout_marginTop="10dp">
            </TextView>

        </TableRow>

        <TableRow android:layout_width="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_team1_fixture"
                android:layout_column="0"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/score_team1_fixture"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/color_main"
                android:gravity="right"
                android:text="-"
                android:textSize="25dp"
                android:layout_marginTop="10dp"
                android:layout_column="1">
            </TextView>

            <TextView
                android:id="@+id/colon_fixture"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@color/color_main"
                android:gravity="center"
                android:textSize="25dp"
                android:layout_column="2"
                android:layout_marginTop="10dp">
            </TextView>

            <TextView
                android:id="@+id/score_team2_fixture"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="left"
                android:text="-"
                android:textColor="@color/color_main"
                android:textSize="25dp"
                android:layout_column="3"
                android:layout_marginTop="10dp">
            </TextView>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_team2_fixture"
                android:layout_column="4"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_height="40dp" />

        </TableRow>

    </TableLayout>

</LinearLayout>