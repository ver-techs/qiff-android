<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical">

    <TableLayout
        android:id="@+id/points_table1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="2">

        <TableRow android:layout_width="match_parent">

            <ImageView
                android:id="@+id/image_team_points_table"
                android:layout_column="0"
                android:gravity="center"
                android:layout_width="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/name_team_points_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_primary"
                android:gravity="right"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_column="1">
            </TextView>

            <LinearLayout
                android:layout_width="75dp"
                android:id="@+id/total_points_layout"
                android:background="@color/color_primary"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_column="3">

                <TextView
                    android:id="@+id/total_points_team_points_table"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/color_accent"
                    android:textStyle="bold|italic"
                    android:textSize="22dp">
                </TextView>

            </LinearLayout>

        </TableRow>

        </TableLayout>

    <TableLayout
        android:id="@+id/points_table2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*">

        <TableRow android:layout_width="match_parent">

            <TextView
                android:id="@+id/wins_points_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/color_secondary"
                android:gravity="left"
                android:textSize="15dp"
                android:layout_column="0"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp">
            </TextView>

            <TextView
                android:id="@+id/draws_points_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/color_secondary"
                android:gravity="left"
                android:layout_column="1"
                android:layout_marginTop="5dp">
            </TextView>

        </TableRow>

        <TableRow android:layout_width="match_parent">

            <TextView
                android:id="@+id/losses_points_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/color_secondary"
                android:gravity="left"
                android:textSize="15dp"
                android:layout_column="0"
                android:layout_marginLeft="12dp">
            </TextView>

            <TextView
                android:id="@+id/goal_difference_points_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/color_secondary"
                android:gravity="left"
                android:layout_column="1">
            </TextView>

        </TableRow>

    </TableLayout>

</LinearLayout>