<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/relative_layout_fan_zone"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="8"
        android:background="@color/color_complementary_3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_horizontal|center_vertical"
            android:background="@color/color_primary" >

            <TextView
                android:id="@+id/fan_zone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FAN ZONE"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:textColor="@color/color_secondary"
                android:textStyle="bold" />

        </RelativeLayout>

        <ScrollView
            android:id="@+id/fan_zone_scroll"
            android:layout_width="match_parent"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="5dp"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:background="@color/color_complementary_3">

            <TableLayout
                android:id="@+id/fan_zone_table"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:shrinkColumns="0">

            </TableLayout>

        </ScrollView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="1"
            android:background="@color/color_white">

            <EditText
                android:textSize="16dp"
                android:id="@+id/message_box"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:focusable="false"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:hint="Enter a fan message !"
                android:textCursorDrawable="@null"
                android:textColor="@color/color_primary"/>

            <Button
                android:id="@+id/send_chat_button"
                android:background="@drawable/send_chat_button"
                android:layout_width="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_height="30dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>