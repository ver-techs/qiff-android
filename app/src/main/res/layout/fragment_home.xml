<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parentScroll">

    <RelativeLayout
        android:layout_height="match_parent"
        android:background="@color/color_tertiary"
        android:layout_width="match_parent"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/relative_layout_home">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/score_card"
            android:layout_marginTop="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginBottom="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            card_view:cardElevation="5sp"
            card_view:cardBackgroundColor="@color/color_accent">

            <TableLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="2">

                <TableRow android:layout_width="match_parent">

                    <TextView
                        android:id="@+id/name_team1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TEAM 1"
                        android:textSize="18dp"
                        android:textColor="@color/color_main"
                        android:gravity="center"
                        android:layout_column="0"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="10dp">
                    </TextView>

                    <TextView
                        android:id="@+id/name_team2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TEAM 2"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:textColor="@color/color_main"
                        android:layout_marginRight="8dp"
                        android:layout_column="4"
                        android:layout_marginTop="10dp">
                    </TextView>

                </TableRow>

                <TableRow android:layout_width="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/image_team1"
                        android:layout_column="0"
                        android:gravity="center"
                        android:layout_width="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_height="40dp"
                        android:src="@drawable/team_1" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/image_team2"
                        android:layout_column="4"
                        android:layout_width="40dp"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_height="40dp"
                        android:src="@drawable/team_2" />

                </TableRow>

                <TableRow
                    android:layout_marginBottom="2dp">
                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:45"
                        android:textColor="@color/color_secondary"
                        android:gravity="right"
                        android:textSize="14dp"
                        android:layout_column="2"
                        android:layout_gravity="center">
                    </TextView>
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/score_team1"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/color_secondary"
                        android:gravity="right"
                        android:textSize="40dp"
                        android:layout_column="1">
                    </TextView>

                    <TextView
                        android:id="@+id/colon"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textColor="@color/color_main"
                        android:gravity="center"
                        android:textSize="40dp"
                        android:layout_column="2" />

                    <TextView
                        android:id="@+id/score_team2"
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:gravity="left"
                        android:textColor="@color/color_secondary"
                        android:textSize="40dp"
                        android:layout_column="3">
                    </TextView>

                </TableRow>

             </TableLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/commentary_card"
            android:layout_below="@id/score_card"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:maxHeight="150dp"
            android:layout_weight="3"
            card_view:cardElevation="5sp"
            card_view:cardBackgroundColor="@color/color_accent">

            <RelativeLayout
                android:id="@+id/relative_layout_commentary"
                android:layout_height="match_parent"
                android:layout_width="match_parent">

                <TextView
                    android:id="@+id/live_commentary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LIVE COMMENTARY"
                    android:textColor="@color/color_primary"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:layout_marginLeft="7dp"
                    android:layout_column="0"
                    android:layout_marginTop="10dp">
                </TextView>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_below="@id/live_commentary"
                    android:layout_height="wrap_content">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TableLayout>

                </ScrollView>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/fanzone_card"
            android:layout_below="@id/commentary_card"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="3"
            card_view:cardElevation="5sp"
            card_view:cardBackgroundColor="@color/color_accent">

            <RelativeLayout
                android:id="@+id/relative_layout_fan_zone"
                android:layout_height="match_parent"
                android:layout_width="match_parent">

                <TextView
                    android:id="@+id/fan_zone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FAN ZONE"
                    android:textSize="18dp"
                    android:textColor="@color/color_primary"
                    android:gravity="center"
                    android:layout_marginLeft="7dp"
                    android:layout_column="0"
                    android:layout_marginTop="10dp">
                </TextView>

                <ScrollView
                    android:id="@+id/childScroll"
                    android:layout_width="match_parent"
                    android:layout_below="@id/fan_zone"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginBottom="5dp"
                    android:layout_height="100dp">

                    <TableLayout
                        android:id="@+id/fan_zone_table"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:stretchColumns="2">

                    </TableLayout>

                </ScrollView>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/childScroll">

                    <EditText
                        android:textSize="16dp"
                        android:id="@+id/message_box"
                        android:layout_width="277dp"
                        android:layout_height="40dp"
                        android:focusable="false"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:hint="Enter a fan message !"
                        android:textColor="@color/color_primary"/>

                    <Button
                        android:id="@+id/send_chat_button"
                        android:background="@drawable/send_chat_button"
                        android:layout_width="30dp"
                        android:layout_gravity="end|right"
                        android:layout_height="30dp" />

                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</ScrollView>