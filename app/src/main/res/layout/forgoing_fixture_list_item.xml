<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="70dp"
    android:background="@color/color_accent">

    <TableLayout
        android:id="@+id/table_fixture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1,3"
        android:shrinkColumns="0,4">

        <TableRow
            android:layout_width="match_parent">

            <TextView
                android:id="@+id/score_team1_fixture"
                android:layout_height="wrap_content"
                android:textColor="@color/color_secondary"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_column="1">
            </TextView>

            <TextView
                android:id="@+id/score_team2_fixture"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/color_secondary"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_column="3">
            </TextView>

        </TableRow>

        <TableRow
            android:layout_width="match_parent">

            <ImageView
                android:id="@+id/image_team1_fixture"
                android:layout_column="0"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginLeft="5dp"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/name_team1_fixture"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="14dp"
                android:textColor="@color/color_primary"
                android:layout_column="1">
            </TextView>

            <TextView
                android:id="@+id/colon_fixture"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="X"
                android:textColor="@color/color_main"
                android:gravity="center"
                android:textSize="25dp"
                android:layout_column="2">
            </TextView>

            <TextView
                android:id="@+id/name_team2_fixture"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:background="@drawable/rectangle_background_spinner"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="14dp"
                android:textColor="@color/color_primary"
                android:layout_column="3">
            </TextView>

            <ImageView
                android:id="@+id/image_team2_fixture"
                android:layout_column="4"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="25dp" />

        </TableRow>

    </TableLayout>

</LinearLayout>