<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TableLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="2">

        <TableRow android:layout_width="match_parent">

            <TextView
                android:id="@+id/name_team1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TEAM 1"
                android:textSize="16dp"
                android:textColor="@color/color_main"
                android:gravity="center"
                android:layout_column="0"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp">
            </TextView>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:45"
                android:textColor="@color/color_main"
                android:gravity="right"
                android:textSize="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                android:layout_column="2"
                android:layout_gravity="center">
            </TextView>

            <TextView
                android:id="@+id/name_team2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TEAM 2"
                android:textSize="16dp"
                android:gravity="center"
                android:textColor="@color/color_main"
                android:layout_marginRight="8dp"
                android:layout_column="4"
                android:layout_marginTop="10dp">
            </TextView>

        </TableRow>

        <TableRow android:layout_width="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_team1"
                android:layout_column="0"
                android:gravity="center"
                android:layout_width="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_height="40dp"
                android:src="@drawable/team_1" />

            <TextView
                android:id="@+id/score_team1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/color_main"
                android:gravity="right"
                android:textSize="25dp"
                android:layout_marginTop="10dp"
                android:layout_column="1">
            </TextView>

            <TextView
                android:id="@+id/colon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@color/color_main"
                android:gravity="center"
                android:textSize="25dp"
                android:layout_column="2"
                android:layout_marginTop="10dp">
            </TextView>

            <TextView
                android:id="@+id/score_team2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:gravity="left"
                android:textColor="@color/color_main"
                android:textSize="25dp"
                android:layout_column="3"
                android:layout_marginTop="10dp">
            </TextView>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_team2"
                android:layout_column="4"
                android:layout_width="40dp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_height="40dp"
                android:src="@drawable/team_2" />

        </TableRow>

    </TableLayout>

</LinearLayout>
