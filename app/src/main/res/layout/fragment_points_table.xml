<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_horizontal|center_vertical"
        android:background="@color/color_primary" >

        <TextView
            android:id="@+id/group_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GROUPS"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            android:textColor="@color/color_secondary"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:paddingTop="60dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/score_card1"
                android:layout_marginTop="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginLeft="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@android:color/transparent"
                card_view:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/header_line">

                        <ImageView
                            android:id="@+id/image_people_group_1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"/>

                        <TextView
                            android:id="@+id/name_group1"
                            android:layout_width="56dp"
                            android:background="@color/color_white"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:textColor="@color/color_primary"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="8dp" />

                    </LinearLayout>

                    <com.ver_techs.qiff_android.custom_views.CustomListView
                        android:id="@+id/list_teams_group1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp">
                    </com.ver_techs.qiff_android.custom_views.CustomListView>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/score_card2"
                android:layout_marginTop="10dp"
                android:layout_marginRight="14dp"
                android:layout_marginLeft="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@android:color/transparent"
                card_view:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/header_line">

                        <ImageView
                            android:id="@+id/image_people_group_2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"/>

                        <TextView
                            android:id="@+id/name_group2"
                            android:layout_width="60dp"
                            android:background="@color/color_white"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:textColor="@color/color_primary"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="8dp" />

                    </LinearLayout>

                    <com.ver_techs.qiff_android.custom_views.CustomListView
                        android:id="@+id/list_teams_group2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >
                    </com.ver_techs.qiff_android.custom_views.CustomListView>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/score_card3"
                android:layout_marginTop="10dp"
                android:layout_marginRight="14dp"
                android:layout_marginLeft="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@android:color/transparent"
                card_view:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/header_line">

                        <ImageView
                            android:id="@+id/image_people_group_3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"/>

                        <TextView
                            android:id="@+id/name_group3"
                            android:layout_width="64dp"
                            android:background="@color/color_white"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:textColor="@color/color_primary"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="8dp" />

                    </LinearLayout>

                    <com.ver_techs.qiff_android.custom_views.CustomListView
                        android:id="@+id/list_teams_group3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >
                    </com.ver_techs.qiff_android.custom_views.CustomListView>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/score_card4"
                android:layout_marginTop="10dp"
                android:layout_marginRight="14dp"
                android:layout_marginLeft="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@android:color/transparent"
                card_view:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/header_line">

                        <ImageView
                            android:id="@+id/image_people_group_4"
                            android:layout_width="40dp"
                            android:layout_height="40dp"/>

                        <TextView
                            android:id="@+id/name_group4"
                            android:layout_width="64dp"
                            android:background="@color/color_white"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:textColor="@color/color_primary"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="8dp" />

                    </LinearLayout>

                    <com.ver_techs.qiff_android.custom_views.CustomListView
                        android:id="@+id/list_teams_group4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >
                    </com.ver_techs.qiff_android.custom_views.CustomListView>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/icon_chat"
        fab:fab_colorNormal="@color/color_white"
        fab:fab_colorPressed="@color/color_primary" />

</FrameLayout>